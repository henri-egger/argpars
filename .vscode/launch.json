{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug my_program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/argpars_test", // Path to the compiled binary
      "args": [], // Arguments to pass to the program
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
